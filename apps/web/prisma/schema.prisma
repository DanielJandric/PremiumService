generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DocKind {
  devis
  facture
}

enum Currency {
  CHF
  EUR
}

model Template {
  id         String   @id @default(cuid())
  name       String   @unique
  htmlSource String
  css        String
  brand      Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  documents  Document[]
}

model Sequence {
  id        String   @id @default(cuid())
  kind      DocKind
  prefix    String
  counter   Int      @default(0)
  updatedAt DateTime @updatedAt

  @@unique([kind, prefix])
}

model Document {
  id           String    @id @default(cuid())
  kind         DocKind
  number       String    @unique
  customer     Json
  items        Json
  currency     Currency
  subtotal     Decimal   @db.Decimal(12, 2)
  vat          Decimal   @db.Decimal(12, 2)
  total        Decimal   @db.Decimal(12, 2)
  pdfPath      String
  pdfPublicUrl String?
  issueDate    DateTime
  dueDate      DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  templateId String?
  template   Template? @relation(fields: [templateId], references: [id])
}

